doctype html

block locals
  - var title = 'My Website'

html
  head(lang='en')
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0')
    meta(http-equiv='X-UA-Compatible' content='ie=edge')
    title #{title}
  body
    include _menu
    block content

    footer(class='footer')